<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.naxy.xytodo">

    <application
        android:name=".tool.AppNaxy"
        android:allowBackup="true"
        android:exported="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ActivityMain"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_Parallax">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.ActivityAboutApp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
        <activity
            android:name=".activity.ActivityGuide"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
        <activity
            android:name=".activity.ActivityContactUs"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
        <activity
            android:name=".activity.ActivitySettings"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
        <activity
            android:name=".activity.ActivityTaskAdd"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
        <activity
            android:name=".activity.ActivityTaskEdit"
            android:screenOrientation="portrait"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
        <activity
            android:name=".activity.ActivityNote"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme_Material_Black_NoActionBar"/>
    </application>

</manifest>